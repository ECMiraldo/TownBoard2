<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
 xmlns:app="http://schemas.android.com/apk/res-auto"
 xmlns:tools="http://schemas.android.com/tools"
 android:orientation="vertical"
 android:layout_width="match_parent"
 android:layout_height="match_parent">

    <TextView
        android:id="@+id/TituloActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Adicionar Novo Evento"
        android:textColor="@color/purple_500"
        android:textSize="40sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/logo_pic"
            android:layout_width="135dp"
            android:layout_height="111dp"
            android:layout_marginStart="20dp"
            android:src="@color/black" />

        <EditText
            android:id="@+id/nameEventsEdit"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="105dp"
            android:layout_marginBottom="342dp"
            android:hint="Titulo"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/localEventEdit"
            android:layout_width="145dp"
            android:layout_height="54dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="106dp"
            android:layout_marginBottom="282dp"
            android:hint="Local"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/dataEventEdit"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@+id/logo_pic"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="269dp"
            android:layout_marginBottom="223dp"
            android:hint="DD/MM/AAAA"
            android:inputType="date"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/horaEventEdit"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="217dp"
            android:layout_marginBottom="225dp"
            android:hint="hora"
            android:inputType="time"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/descriptionEventsEdit"
            android:layout_width="379dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="11dp"
            android:layout_marginBottom="165dp"
            android:hint="Pequena Descricao"
            android:textStyle="normal" />

        <Button
            android:id="@+id/buttonDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="300dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="21dp"
            android:text="Done" />


    </RelativeLayout>

</LinearLayout>