<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.adds.AddAddFragment"
    android:background="@drawable/gradient_background">


    <EditText
        android:id="@+id/editName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="192dp"
        android:hint="Nome da empresa"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/minieditDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editName"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="36dp"
        android:hint="Uma breve descricao"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/editName"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="@+id/editName"
        app:layout_constraintTop_toBottomOf="@+id/editName" />

    <EditText
        android:id="@+id/editDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/minieditDescription"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="32dp"
        android:hint="Uma descricao mais detalhada"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/minieditDescription"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="@+id/minieditDescription"
        app:layout_constraintTop_toBottomOf="@+id/minieditDescription" />

    <Button
        android:id="@+id/buttonDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Done"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/editName"
        android:layout_alignBottom="@+id/editName"
        android:layout_marginEnd="4dp"
        android:layout_toStartOf="@+id/editName"
        android:src="@drawable/ic_baseline_store_24"
        app:layout_constraintBottom_toBottomOf="@+id/editName"
        app:layout_constraintEnd_toStartOf="@+id/editName"
        app:layout_constraintTop_toTopOf="@+id/editName"
        app:layout_constraintVertical_bias="0.666" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/minieditDescription"
        android:layout_alignBottom="@+id/minieditDescription"
        android:layout_marginEnd="4dp"
        android:layout_toStartOf="@+id/minieditDescription"
        android:src="@drawable/ic_baseline_forum_24"
        app:layout_constraintBottom_toBottomOf="@+id/minieditDescription"
        app:layout_constraintEnd_toStartOf="@+id/minieditDescription"
        app:layout_constraintTop_toTopOf="@+id/minieditDescription"
        app:layout_constraintVertical_bias="0.476" />

</androidx.constraintlayout.widget.ConstraintLayout>